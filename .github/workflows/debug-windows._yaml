name: Debug windows
on:
    pull_request:
        branches: [master]

jobs:

  debug_on_win:
    runs-on: windows-latest
    steps:
    - uses: actions/checkout@v2       
    - uses: actions/setup-node@master
      with:
        node-version: 14
    - name: install dependencies
      run: npm install
    - name: compile
      run: npm run compile
    - name: start
      run: npm run debug
    - name: check-log
      run: type C:\Users\runneradmin\AppData\Roaming\yarle-evernote-to-md\conversion.log
    - name: check-dir
      run: ls ./out